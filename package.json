{
  "name": "dry-aged-deps",
  "version": "0.1.2",
  "type": "module",
  "bin": {
    "dry-aged-deps": "./bin/dry-aged-deps.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "echo 'No build step required'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "start": "node ./bin/dry-aged-deps.js",
    "test": "vitest run --coverage",
    "test:watch": "vitest --coverage",
    "test:cli": "vitest run",
    "lint": "eslint --config eslint.config.js --format stylish . --ext .js",
    "prepare": "husky install",
    "typecheck": "npm run type-check",
    "type-check": "node node_modules/typescript/bin/tsc --noEmit -p tsconfig.json",
    "validate": "npm run lint && npm test",
    "release": "npm version patch && git push --follow-tags"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "9.39.1",
    "eslint-plugin-security": "^3.0.1",
    "execa": "9.6.0",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "jscpd": "^4.0.5",
    "prettier": "3.6.2",
    "semantic-release": "24.2.9",
    "typescript": "5.9.3",
    "vitest": "4.0.8"
  },
  "publishConfig": {
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/voder-ai/dry-aged-deps"
  },
  "license": "MIT",
  "main": "src/index.js"
}
